<h1> Show book </h1>


<div class="row">
    <div class"col s12">
      <h5>Title</h5>
    </div>
    <div class="col s12">
      <%= @book.title %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>ISBN</h5>
    </div>
    <div class="col s12">
      <%= @book.isbn %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Description</h5>
    </div>
    <div class="col s12">
      <%= @book.description %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Author</h5>
    </div>
    <div class="col s12">
      <%= @book.author %>
    </div>
</div>


<div class="row">
    <div class"col s12">
      <h5>Status</h5>
    </div>
    <div class="col s12">
      <%= get_status_from_number(@book.status) %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Thumbnail</h5>
    </div>
    <div class="col s12">
      <%= @book.thumbnail %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Return date</h5>
    </div>
    <div class="col s12">
      <%= @book.return %>
    </div>
</div>

<%= link_to(@book, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn") do %>
    <i class="material-icons left">delete</i> Delete
<% end %>
         
<%= link_to("/editbook/" + @book.id.to_s + "/" , class: "waves-effect waves-light btn") do %>
    <i class="material-icons left">edit</i> Edit
<% end %>

<% if @book.status.to_s == "1" %>
    <%= link_to(book_path(@book, "book[status]" => 2),class: "waves-effect waves-light btn", :method => :put) do %>
        <i class="material-icons left">done</i> Done
    <% end %>
       
    <% else %>
     <a href="#" class="waves-effect waves-light btn disabled"><i class="material-icons left">done</i> Done</a>
<% end %>

<% if @book.status.to_s == "2" %>
    <%= link_to("/loanbook/" + @book.id.to_s + "/" ,class: "waves-effect waves-light btn") do %>
        <i class="material-icons left">add_shopping_cart</i> Loan
    <% end %>
       
    <% else %>
     <a href="#" class="waves-effect waves-light btn disabled"><i class="material-icons left">add_shopping_cart</i> Loan</a>
<% end %>

