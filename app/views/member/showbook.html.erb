<h1> Show book </h1>


<div class="row">
    <div class"col s12">
      <h5>Title</h5>
    </div>
    <div class="col s12">
      <%= @book.title %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>ISBN</h5>
    </div>
    <div class="col s12">
      <%= @book.isbn %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Description</h5>
    </div>
    <div class="col s12">
      <%= @book.description %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Author</h5>
    </div>
    <div class="col s12">
      <%= @book.author %>
    </div>
</div>


<div class="row">
    <div class"col s12">
      <h5>Status</h5>
    </div>
    <div class="col s12">
      <%= get_status_from_number(@book.status) %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Thumbnail</h5>
    </div>
    <div class="col s12">
      <%= @book.thumbnail %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Return date</h5>
    </div>
    <div class="col s12">
      <%= @book.return %>
    </div>
</div>

<%= form_for(@book, url: renew_book_path(@book)) do |f| %>
  
  <!-- need to have an hiden field in order the send "book" to the controller -->
  <%= f.hidden_field :id %> 
  
  <% if @book.return - @book.start_loan <= 60 %>
      <button class="btn waves-effect waves-light" type="submit" name="action">Renew
        <i class="material-icons right">send</i>
      </button>
    <% else %>
      <button class="btn waves-effect waves-light disabled" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    <%end%>
<% end %>
