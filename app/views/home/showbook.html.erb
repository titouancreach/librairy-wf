<h1> Show book </h1>


<div class="row">
    <div class"col s12">
      <h5>Title</h5>
    </div>
    <div class="col s12">
      <%= @book.title %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>ISBN</h5>
    </div>
    <div class="col s12">
      <%= @book.isbn %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Description</h5>
    </div>
    <div class="col s12">
      <%= @book.description %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Author</h5>
    </div>
    <div class="col s12">
      <%= @book.author %>
    </div>
</div>


<div class="row">
    <div class"col s12">
      <h5>Status</h5>
    </div>
    <div class="col s12">
      <%= get_status_from_number(@book.status) %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Thumbnail</h5>
    </div>
    <div class="col s12">
      <%= @book.thumbnail %>
    </div>
</div>

<div class="row">
    <div class"col s12">
      <h5>Return date</h5>
    </div>
    <div class="col s12">
      <%= @book.return %>
    </div>
</div>